<h1>Cards</h1>
<% @order_items.each do |item| %>
    <h3><%= item.book.title %></h3>
    <h3><%= item.book.number_of_pages %></h3>
    <h3><%= item.quantity.to_i %></h3>
    <%= form_for item do |f| %>
        <%= f.hidden_field :product_id, :value=> item.book.id %>    
        <%= link_to "Remove Items", order_item_path, method: :delete %>
        <% end %>
    <h2>Subtotal: <%= item.total %></h2>
<% end %>
<h1>Total: <%= current_order.subtotal %> </h1>